<plugin id="ioTuto" class="ioTuto::Plugin">

    <library name="ioTuto" />

    <requirement id="io" />
    
<!-- All Reader/Writer can extended by providing a specific configuration, being a user info for instance -->
    <extension-point id="::ioTuto::ioTuto1" />

<!-- User info like extensions -->  
    <extension implements="::ioTuto::ioTuto1" >
        <info text="Tuto(Ircad)"/>
    </extension>
    
    <!-- REGISTER_SERVICE( ::io::IReader , ::ioTuto::ExternalDataReaderService , ::fwData::Composite ) ;-->
    <point id="::ioTuto::ExternalDataReaderService" >
        <implements>::io::IReader</implements>
        <implements>::fwData::Composite</implements>
    </point>
    
        <!-- REGISTER_SERVICE( ::io::IReader , ::ioTuto::CompositeReaderService , ::fwData::Composite ) ;-->
    <point id="::ioTuto::CompositeReaderService" >
        <implements>::io::IReader</implements>
        <implements>::fwData::Composite</implements>
    </point>
    
    <!-- REGISTER_SERVICE( ::io::IWriter , ::ioTuto::CompositeWriterService , ::fwData::Composite ) ;-->
    <point id="::ioTuto::CompositeWriterService" >
        <implements>::io::IWriter</implements>
        <implements>::fwData::Composite</implements>
    </point>    
</plugin>
