<plugin id="ioGdcm" class="ioGdcm::Plugin" >
    <library name="ioGdcm" />

    <requirement id="dataReg"/>
    <requirement id="servicesReg"/>
    <requirement id="io" />

    <extension implements="::fwServices::registry::ServiceFactory">
        <type>::io::IReader</type>
        <service>::ioGdcm::DicomPatientDBReaderService</service>
        <object>::fwData::PatientDB</object>
        <desc>Dicom Reader (gdcm)</desc>
    </extension>
    
    <extension implements="::fwServices::registry::ServiceFactory">
        <type>::io::IWriter</type>
        <service>::ioGdcm::DicomPatientDBWriterService</service>
        <object>::fwData::PatientDB</object>
        <desc>Dicom Writer (gdcm)</desc>
    </extension>
    
    <extension implements="::fwServices::registry::ServiceFactory">
        <type>::io::IWriter</type>
        <service>::ioGdcm::DicomPatientWriterService</service>
        <object>::fwData::Patient</object>
        <desc>Dicom Writer (gdcm)</desc>
    </extension>    

    <extension implements="::fwServices::registry::ServiceFactory">
        <type>::io::IWriter</type>
        <service>::ioGdcm::DicomImageWriterService</service>
        <object>::fwData::Image</object>
        <desc>Dicom Writer (gdcm)</desc>
    </extension>    
   
</plugin>
