<serviceList>

    <service uid="${GENERIC_UID}_mainView" type="::gui::view::IView" impl="::gui::view::DefaultView" autoConnect="no">
        <gui>
            <layout type="::fwGui::CardinalLayoutManager">
                <view align="center" caption="Patient selector" />
                <view align="right" caption="Patient information" minWidth="400" />
                <view align="bottom" caption="Visu 2D" minHeight="400" />
            </layout>
            <toolBar />
        </gui>
        <registry>
            <parent wid="${WID_PARENT}" />
            <toolBar sid="${GENERIC_UID}_toolBar" start="yes" />
            <view sid="${GENERIC_UID}_selector" start="no" />
            <view sid="${GENERIC_UID}_infoEditor" start="no" />
            <view sid="${GENERIC_UID}_multiView_negato1" start="yes" />
        </registry>
    </service>

    <!-- NEGATO VIEW -->
    <service uid="${GENERIC_UID}_multiView_negato1" type="::gui::view::IView" impl="::gui::view::DefaultView" autoConnect="no">
        <gui>
            <layout type="::fwGui::LineLayoutManager">
                <orientation value="vertical" />
                <view proportion="1" />
                <view proportion="0" minHeight="30" />
            </layout>
        </gui>
        <registry>
            <view sid="${GENERIC_UID}_negato1" start="no" />
            <view sid="${GENERIC_UID}_multiView_negato1_bottom" start="yes" />
        </registry>
    </service>

    <service uid="${GENERIC_UID}_multiView_negato1_bottom" type="::gui::view::IView" impl="::gui::view::DefaultView" autoConnect="no">
        <gui>
            <layout type="::fwGui::LineLayoutManager">
                <orientation value="horizontal" />
                <view proportion="1" />
            </layout>
        </gui>
        <registry>
            <view sid="${GENERIC_UID}_slider_negato1" start="no" />
        </registry>
    </service>

    <service uid="${GENERIC_UID}_toolBar" type="::fwGui::IToolBarSrv" impl="::gui::aspect::DefaultToolBarSrv" autoConnect="no">
        <gui>
            <layout>
                <menuItem name="Import patient" icon="Bundles/VRRender_0-9/icons/ImportPatient.png" />
                <menuItem name="Export selected patient" icon="Bundles/VRRender_0-9/icons/ExportSeletedPatient.png" />
                <menuItem name="Clone selected image" icon="Bundles/VRRender_0-9/icons/CloneImage.png" />
                <separator />
                <menuItem name="2D MPR view" icon="Bundles/VRRender_0-9/icons/icon-2D.png" />
                <menuItem name="3D MPR view" icon="Bundles/VRRender_0-9/icons/icon-3D.png" />
                <menuItem name="Volumic view" icon="Bundles/VRRender_0-9/icons/icon-VR.png" />
                <spacer />
                <menu name="Patient Data Base" />
                <separator />
                <menu name="Help" />
            </layout>
        </gui>
        <registry>
            <menuItem sid="${GENERIC_UID}_action_importPatient" start="no" />
            <menuItem sid="${GENERIC_UID}_action_exportSelPatient" start="no" />
            <menuItem sid="${GENERIC_UID}_action_CloneImage" start="no" />
            <menuItem sid="${GENERIC_UID}_action_activity3" start="no" />
            <menuItem sid="${GENERIC_UID}_action_activity4" start="no" />
            <menuItem sid="${GENERIC_UID}_action_vr_activity" start="no" />
            <menu sid="${GENERIC_UID}_menu" start="yes" />
            <menu sid="${GENERIC_UID}_menu_help" start="yes" />
        </registry>
    </service>

    <service uid="${GENERIC_UID}_menu" type="::fwGui::IMenuSrv" impl="::gui::aspect::DefaultMenuSrv" autoConnect="no">
        <gui>
            <layout>
                <menuItem name="Import patient" />
                <separator />
                <menuItem name="Export all patients" />
                <menuItem name="Export selected patient" />
                <menuItem name="Export selected image" />
                <separator />
                <menuItem name="Erase all patients" />
                <menuItem name="Erase selected image" shortcut="Delete" />
                <separator />
                <menuItem name="Clone selected image" />
                <separator />
                <menuItem name="Quit" shortcut="Ctrl+Q" specialAction="QUIT" />
            </layout>
        </gui>
        <registry>
            <menuItem sid="${GENERIC_UID}_action_importPatient" start="no" />

            <menuItem sid="${GENERIC_UID}_action_exportAllPatient" start="no" />
            <menuItem sid="${GENERIC_UID}_action_exportSelPatient" start="no" />
            <menuItem sid="${GENERIC_UID}_action_exportSelImage" start="no" />

            <menuItem sid="${GENERIC_UID}_action_eraseAllPatients" start="no" />
            <menuItem sid="${GENERIC_UID}_action_eraseSelImage" start="no" />

            <menuItem sid="${GENERIC_UID}_action_CloneImage" start="no" />

            <menuItem sid="${GENERIC_UID}_action_quit" start="yes" />
        </registry>
    </service>

    <service uid="${GENERIC_UID}_menu_help" type="::fwGui::IMenuSrv" impl="::gui::aspect::DefaultMenuSrv" autoConnect="no">
        <gui>
            <layout>
                <menuItem name="About" specialAction="ABOUT" />
                <menuItem name="Acknowledgments" />
                <menuItem name="Help Contents" specialAction="HELP" />
                <separator />
                <menuItem name="VR-Render Website" />
            </layout>
        </gui>
        <registry>
            <menuItem sid="${GENERIC_UID}_action_about" start="yes" />
            <menuItem sid="${GENERIC_UID}_action_acknowledgments" start="yes" />
            <menuItem sid="${GENERIC_UID}_action_help" start="yes" />
            <menuItem sid="${GENERIC_UID}_action_openBrowser" start="yes" />
        </registry>
    </service>

    <service uid="${GENERIC_UID}_action_about" type="::fwGui::IActionSrv" impl="::uiGeneric::action::ShowAbout" autoConnect="no">
        <filename id="Bundles/VRRender_0-9/about/about.html" />
    </service>

    <service uid="${GENERIC_UID}_action_acknowledgments" type="::fwGui::IActionSrv" impl="::uiGeneric::action::ShowAcknowledgments" autoConnect="no">
        <filename id="Bundles/VRRender_0-9/documentations/ack.html" />
    </service>

    <service uid="${GENERIC_UID}_action_help" type="::fwGui::IActionSrv" impl="::uiGeneric::action::ShowHelpContents" autoConnect="no">
        <filename id="Bundles/VRRender_0-9/documentations/doc.qhc" />
    </service>

    <service uid="${GENERIC_UID}_action_openBrowser" type="::fwGui::IActionSrv" impl="::uiGeneric::action::LaunchBrowserActionService" autoConnect="no">
        <url>http://www.ircad.fr/softwares/vr-render/Software.php</url>
    </service>

    <service uid="${GENERIC_UID}_action_quit" type="::fwGui::IActionSrv" impl="::gui::action::QuitAction" autoConnect="no" />

</serviceList>